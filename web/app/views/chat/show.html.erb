<div class="row">
  <div class="large-12 columns">

    <!-- Navigation -->

      <nav class="top-bar">
        <ul class="title-area">
          <!-- Title Area -->
          <li class="name">
            <h1>
              <a href="#">
                ProMeet
              </a>
            </h1>
          </li>
          <li class="toggle-topbar menu-icon">
            <a href="#"><span>menu</span></a>
          </li>
        </ul>

        <section class="top-bar-section">
          <ul class="right">
            <%= link_to 'Sign out', session_path, method: :delete, class: 'button'%>
           </ul>
        </section>
    </nav>

    <!-- End Navigation -->

    </div>
  </div>

  <div class="row" id="chat-box">  
    <section class="av-container">
      <div class="large-8 columns" id="video-section">
        <h5>On air</h5>

        <div class="row">
          <video class="local" src="video/" autoplay="autoplay"
                 poster="images/puppy.jpg"
                 width="640" height="400">
          </video>
        </div>
        <div class="row">
          <div class="large-11 columns">
            <div class="large-2 columns" align="left">
              <%= @other_profile.name %>
            </div>
            <div class="large-6 columns" align="right">
              Job, Company
            </div>
          </div>
        </div>
      </div>

      <div class="large-4 columns">
        <div class="row">
          <form>
            <h6>Chat history</h6>
            <ul id="chat-history">
            </ul>
          </form>
        </div>
        <div class="row">
          <form id="chat-composer">
            <h6>Input area</h6>
            <textarea class="message" cols="20" rows="4"></textarea>
          </form>
        </div>
        <div class="row" align="right">
          <button type="button" class="radius small button"
              id="chat-send-button">
            Send
          </button>
        </div>
        <br>
        <div class="row" align="right">
          <a href="#" class="radius tiny secondary button">Report</a>
          <%= link_to 'Leave', chat_leave_path, method: :put,
            class: 'radius tiny secondary button' %>
        </div>
      </div>
    </section>
  </div>

  <br>
  
  <div class="row">
    <div class="progress small-12 radius">
      <span class="meter" style="width: 40%"></span>
    </div>
  </div>

    <!-- Footer -->

  <footer class="row">
    <div class="large-12 columns">
      <hr>
      <div class="row">
        <div class="large-6 columns">
          <p>&copy; Copyright 2013. The Hack.</p>
        </div>
        <div class="large-6 columns">
          <ul class="inline-list right">
            <li><a href="aboutus.html">About Us</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>

  <script type="text/javascript">
    window.chatController = new ChatController({
      backend: <%= @chat_state.backend_url.inspect.html_safe %>,
      key: <%= @chat_state.join_key_for(current_user).inspect.html_safe %>,
      closeUrl: <%= session_url.inspect.html_safe %>
    });
  </script>
